@{
  Layout = "_Layout";
}

@using SweetShop.Models;
@model List<SweetShop.Models.Treat>;

<h1>Treats!</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 

@foreach(Treat treat in Model)
{
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
}

<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>